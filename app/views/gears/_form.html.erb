<%= simple_form_for([@user, @gear]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :item, priority: [ "Skis" ], collection: [ "Skis","Boots","Goggles","Sticks","Snowboard","Suit"] %>
    <%= f.input :description %>
    <%= f.input :size %>
    <%= f.input :brand, priority: [ "Salomon" ], collection: [ "Salomon","The North Face","Nordica","Athalon","Sorel"] %>
    <%= f.input :price %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary'%>
    <%= link_to "Back", user_path(current_user), :class => "btn btn-primary" %>
  </div>
<% end %>


