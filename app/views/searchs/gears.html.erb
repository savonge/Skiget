<p id="notice"><%= notice %></p>

<h1>Listing Gears</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Description</th>
      <th>Size</th>
      <th>Brand</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @gears.each do |gear| %>
      <tr>
        <td><%= gear.item %></td>
        <td><%= gear.description %></td>
        <td><%= gear.size %></td>
        <td><%= gear.brand %></td>
        <td><%= gear.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

